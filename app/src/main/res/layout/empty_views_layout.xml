<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/emptylayout"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/empty_folder_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/quicksand_bold"
                android:textSize="24sp"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:text="OOPS" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:text="No practice question to resume" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textActionWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                style="@style/sectionHeader"
                android:text="Start Practicing" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>